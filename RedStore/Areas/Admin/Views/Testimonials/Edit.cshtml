@model Tbtestimonial
<div class="card-body" style="background:black">
    <h4 class="card-title">Edit form</h4>
    <form class="forms-sample" method="post" enctype="multipart/form-data" asp-controller="Testimonials" asp-action="Save" role="form">
        <div>
            <input asp-for="TestimonialsId" type="hidden" />
        </div>

        <div class="form-group">
            <label for="exampleInputUsername1">
                Image
            </label>
            <input asp-for="ImageName" type="file" name="Files" multiple
                   class="form-control" placeholder="  Image"
                   onchange="Upload.UploadDefaultImg(event)" accept=".jpg, .jpeg, .png, ,.gif">
        </div>


        <div class="form-group">
            <label for="exampleInputUsername1"> CustmerName</label>
            <input asp-for="CustmerName" type="text" class="form-control" placeholder=" CustmerName">
            <span asp-validation-for="CustmerName"></span>
        </div>



        <div class="form-group">
            <label for="exampleInputUsername1"> Comment</label>
            <input asp-for="Comment" type="text" class="form-control" placeholder=" Comment">
            <span asp-validation-for="Comment"></span>
        </div>



        <div class="form-group">
            <label for="exampleInputUsername1"> Rating</label>
            <input asp-for="Rating" type="text" class="form-control" placeholder=" Rating">
            <span asp-validation-for="Rating"></span>
        </div>


        <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
        <button class="btn btn-dark">Cancel</button>

    </form>
</div>